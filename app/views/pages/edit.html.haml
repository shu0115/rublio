.container{ style: 'width: 700px' }
  = form_for(:page, url: page_path(@page), method: :put, class: "form-horizontal" ) do |f|
    %fieldset
      %legend= "#{@page.group.try(:name)}：ページ編集"
    .form-group
      = f.label :group_id, class: 'control-label'
      = f.select :group_id, @groups.map{ |g| [g.name, g.id] }, { selected: @page.group_id }, { class: 'form-control' }
    = render partial: '/pages/form', locals: { f: f, group: @group }
    .form-group
      = f.submit t("menu.update", default: "update"), data: { disable_with: t("menu.update", default: "Update") }, class: 'btn btn-primary'
      = link_to t("menu.show", default: "Show"), page_path(@page), class: 'btn btn-primary'
  %br/
  %br/
  = link_to "MyLibrary", my_library_path(anchor: "group_#{@page.group_id}"), class: 'btn btn-default'
