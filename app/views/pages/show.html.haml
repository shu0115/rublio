- # テーブル用スタイル
%style{ type: 'text/css' }
  table, th, td { border: 1px #ccc solid; border-collapse: collapse; border-spacing: 0px; }
  th { text-align: center; padding: 5px 8px; white-space: nowrap; }
  td { padding: 5px 8px; }

%ul.breadcrumb
  %li= link_to @page.group.try(:name), group_path(@page.group)
  %li= link_to @page.title, page_path(@page)

= link_to t("menu.edit", default: "Edit"), edit_page_path(@page), class: 'btn btn-primary'

%h1= @page.title

%hr

%div.target_blank_link
  = raw markdown(@page.content)

%hr

%div
  Created:
  = @page.created_at.strftime("%Y年%m月%d日 %H:%M")
%div
  Updated:
  = @page.updated_at.strftime("%Y年%m月%d日 %H:%M")

%hr

= link_to t("menu.edit", default: "Edit"), edit_page_path(@page), class: 'btn btn-primary'
= link_to t( "menu.destroy", default: "Delete"), page_path(@page), method: :delete, data: { confirm: "「#{@page.title}」を削除します。よろしいですか？" }, class: 'btn btn-danger'

%br
%br

= link_to "Group", group_path(@page.group_id), class: 'btn btn-default'
= link_to t("menu.top", default: "Top"), my_library_path, class: 'btn btn-default'
