!!!
%html
  %head
    %title= APP_NAME
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    .container
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %ul.nav
              %li= link_to APP_NAME, :root, class: "brand"
              - if current_user
                %li= link_to_unless( current_user.screen_name.blank?, image_tag( current_user.image, size: "20x20" ), "https://twitter.com/#!/#{current_user.screen_name}", target: "_blank" )
                %li{:class => @active.blank? ? '' : @active['my_library']}= link_to( current_user.screen_name, { controller: "my", action: "library" } )
                / %li{:class => @active.blank? ? '' : @active['users_index']}= link_to( "Users", controller: "users", action: "index" )
                - if false
                  %li{:class => @active.blank? ? '' : @active['users_library']}= link_to( "MyPages", controller: "users", action: "library", id: session[:user_id] )
                - if false
                  | #{link_to "MyGroups", controller: "groups", action: "index"}
                %li= link_to( "Logout", logout_path )
              - else
                %li= link_to "Login", "/auth/#{DEFAULT_PROVIDER}"
      %br/
      %br/
      %br/
      = simple_format( flash[:notice], style: "color: green;" ) unless flash[:notice].blank?
      = simple_format( flash[:alert], style: "color: red;" ) unless flash[:alert].blank?
      = yield
      %br/
